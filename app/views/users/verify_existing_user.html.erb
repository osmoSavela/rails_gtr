<div class='col-md-6 col-md-offset-3'>
    <h2>Verify Information and Create Account</h2>

    <%= form_for @user do |f| %>
      <div class='form-group col-md-6 no-pad-left'>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, value: @first_name, class: 'form-control' %>
      </div>

      <div class='form-group col-md-6 no-pad'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, value: @last_name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.text_field :email, value: @email, class: 'form-control' %>
      </div>


      <div class='form-group'>
        <%= f.label :address1, "Address" %>
        <%= f.text_field :address1, value: @address1, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :address2, "Address 2" %>
        <%= f.text_field :address2, value: @address2, class: 'form-control' %>
      </div>

      <div class='form-group col-md-6 no-pad-left'>
        <%= f.label :city %>
        <%= f.text_field :city, value: @city, class: 'form-control' %>
      </div>
      <div class='form-group col-md-6 no-pad'>
        <%= f.label :state %>
        <%= f.select :state, options_for_select(us_states), prompt: 'Select State', class: 'form-control' %>
      </div>
       <div class='form-group col-md-6 no-pad-left'>
        <%= f.label :zip %>
        <%= f.number_field :zip, value: @zip, class: 'form-control' %>
      </div>

       <div class='form-group col-md-6 no-pad'>
        <%= f.label :phone, "Phone Number" %>
        <%= f.number_field :phone, value: @phone, class: 'form-control' %>
      </div>

        <div class='form-group col-md-12 no-pad'>
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class='form-group col-md-12 no-pad'>
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= hidden_field_tag :verifying_user, nil, value: true %>




      <%= f.submit 'Save', class: 'btn btn-gtr-green' %>
    <% end %>
<br>
<br>
</div>
