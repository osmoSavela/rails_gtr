<%= form_for @user do |f| %>
  <div class='form-group col-md-6 no-pad-left'>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class='form-group col-md-6 no-pad'>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>


  <div class='form-group'>
    <%= f.label :address1, "Address" %>
    <%= f.text_field :address1, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :address2, "Address" %>
    <%= f.text_field :address2, class: 'form-control' %>
  </div>

  <div class='form-group col-md-6 no-pad-left'>
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class='form-group col-md-6 no-pad'>
    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>
   <div class='form-group col-md-6 no-pad-left'>
    <%= f.label :zip %>
    <%= f.number_field :zip, step: 1, class: 'form-control' %>
  </div>

   <div class='form-group col-md-6 no-pad'>
    <%= f.label :phone, "Phone Number" %>
    <%= f.number_field :phone, step: 1, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-gtr-green' %>
  <br>
  <br>
<% end %>
