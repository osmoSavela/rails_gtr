<%= form_for [:admin, @user_training_session] do |f| %>
    <%= f.hidden_field :training_session_id, value: @training_session.id %>
    <div class='form-group'>
      <%= label_tag :first_name %>
      <%= text_field_tag :first_name, nil, class: 'form-control' %>
    </div>

    <%= hidden_field_tag :new_user, nil, value: true %>

    <div class='form-group'>
      <%= label_tag :last_name %>
      <%= text_field_tag :last_name, nil, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :payment_method %>
      <%= f.select :payment_method, options_for_select(["Pay in Store", "Credit Card"]), class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.check_box :paid %>
      <%= f.label :paid %>
    </div>

    <%= f.submit 'Create User and Add to Class', class: 'btn btn-gtr-green' %>
<% end %>
