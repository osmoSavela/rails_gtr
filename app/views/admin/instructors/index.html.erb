<div class='row padding-bottom'>
	<%= link_to '<i class="fa fa-angle-double-left"></i> Back to Dashboard'.html_safe, admin_dashboard_url, class: 'pull-left orange' %>
	<div class='col-md-6 col-md-offset-3'>
		<h2 class='green'>GTR Instructor Directory <span class='pull-right'><%= link_to 'Add Instructor', new_admin_instructor_url, class: 'btn btn-gtr-green' %></span></h2>
	</div>
</div>

<div class='row'>
	<div class='col-md-10 col-md-offset-1'>
		<table class='table'>
			<thead>
				<th width='15%'>Intructor</th>
				<th width='50%'>Specialty</th>
				<th>Next Class</th>
				<th></th>
				<th></th>
			</thead>

			<tbody>
				<% @instructors.each do |instructor| %>	
					<tr id='instructor_<%= instructor.id %>'>
						<td><%= link_to instructor.full_name, instructor_url(instructor) %></td>
						<td><%= instructor.bio %></td>
						<td>
							<% if instructor.next_upcoming_session.present? %>
								<%= link_to instructor.next_upcoming_session.training_class.name, training_session_url(instructor.next_upcoming_session) %><br>
								<span class='gray'><%= instructor.next_upcoming_session.session_date.strftime("%A, %B %e, %Y") %></span>
							<% end %>
						</td>
						<td><%= link_to 'Edit', edit_admin_instructor_url(instructor), class: 'btn btn-warning btn-xs' %></td>
						<td><%= link_to 'Delete', admin_instructor_url(instructor), class: 'btn btn-xs btn-danger', method: 'delete', remote: true, data: {confirm: 'Are you sure you want to delete this intructor?'} %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>