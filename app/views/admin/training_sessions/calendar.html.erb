

            <%= link_to "<i class='fa fa-angle-double-left'></i> Back to Dashboard".html_safe, admin_dashboard_url, class: 'orange' %>
      <div class='row padding-top padding-bottom'>
        <div class='col-md-6'>
          <h2>Upcoming Sessions <%= link_to 'Schedule a New Session', new_admin_training_session_url, class: 'btn btn-gtr-green', "data-no-turbolink" => true %></h2>

        </div>

      </div>

      <div class="btn-group" role="group" aria-label="...">
          <%= link_to "List View", admin_training_sessions_url, class: 'btn btn-default green', type: 'button' %>
        <%= link_to "Calendar View", calendar_url, class: 'btn btn-default green active', type: 'button' %>
        </div>


    <%= month_calendar events: @sessions do |date, sessions| %>
      <%= date.strftime("%d") %>

      <% sessions.sort_by{ |s| s.start_time}.each do |session| %>
        <div>
          <%= link_to session.training_class.name, admin_training_session_url(session), 'data-no-turbolink' => true  %> - <%= session.start_time.strftime("%l:%M %p") %><br>
          <span class='dark-green'>Instructor: <%= link_to session.instructor.full_name, instructor_url(session.instructor), class: 'dark-green' if session.instructor %></span>
        </div>
      <% end %>
    <% end %>
    <br>



<script type="text/javascript">

  var table = $('.calendar-header').next();
  table.addClass('calendar-table');

  var session = $('.day div').addClass('calendar-session');
</script>
