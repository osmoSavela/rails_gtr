	<div class='row'>
		<%= link_to "<i class='fa fa-angle-double-left'></i> Back to Dashboard".html_safe, admin_dashboard_url, class: 'orange' %>
	</div>
	<div class='row padding-top'>
		<h1 class='green'>Class List <%= link_to 'Add New Class +', new_admin_training_class_url, class: 'btn btn-gtr-green' %></h1>

		<table class='table table-bordered'>
			<thead>
				<th>Class Name</th>
				<th>Description</th>
				<th>Credentials</th>
				<th>Ammo Requirements</th>
				<th>Gear Requirements</th>
				<th>FOID</th>
				<th>Price</th>
				<th></th>
				<th></th>
			</thead>

			<tbody>
				<% @training_classes.each do |c| %>
					<tr>
						<td class='orange'><%= link_to c.name, admin_training_class_url(c) %></td>
						<td><%= c.description.truncate(100) %></td>
						<td><%= c.credential_requirement %></td>
						<td><%= c.ammo_requirement %></td>
						<td><%= c.equipment_requirement %></td>
						<td><%= c.foid_required %></td>
						<td class='green'><%= number_to_currency(c.price) %></td>
						<td width='8%'><%= link_to 'Edit', edit_admin_training_class_url(c), class: 'btn btn-default' %></td>
						<td width='8%'><%= link_to 'Delete', admin_training_class_url(c), method: 'delete', class: 'btn btn-danger' %></td>

					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

