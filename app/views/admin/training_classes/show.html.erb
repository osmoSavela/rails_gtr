<div class='container'>
	<div class='row'>
		<%= link_to 'Back to Class List', admin_training_classes_url, class: 'orange' %>
		<div class='col-md-12'>
			<h1 class='green'><%= @training_class.name %></h1>
			<%= link_to 'edit', edit_admin_training_class_url(@training_class), class: 'btn btn-xs btn-warning' %> <%= link_to 'delete', admin_training_class_url(@training_class), class: 'btn btn-xs btn-danger', method: 'delete' %>
			<br>
			<br>
			<p><%= @training_class.description %></p>

			<ul class='orange'>
				<li><b>Ammo required:</b> <%= @training_class.ammo_requirement %></li>
				<li><b>Credentials Needed:</b> <%= @training_class.credential_requirement %></li>
				<li><b>Equipment Needed:</b> <%= @training_class.equipment_requirement %></li>
			</ul>
		</div>
	</div>
</div>